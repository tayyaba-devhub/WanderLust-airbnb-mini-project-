<% layout("/layouts/boilerplate") %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2>Login Your WanderLust Account</h2>
      <p class="tagline">Begin your journey with us</p>
      <div class="divider"></div>
    </div>

    <form action="/login" method="POST" class="auth-form">
      <div class="input-field">
        <label for="username">
          <svg class="input-icon" viewBox="0 0 24 24">
            <path d="M12 4a4 4 0 0 1 4 4 4 4 0 0 1-4 4 4 4 0 0 1-4-4 4 4 0 0 1 4-4m0 10c4.42 0 8 1.79 8 4v2H4v-2c0-2.21 3.58-4 8-4z"/>
          </svg>
          Username
        </label>
        <input name="username" id="username" type="text" placeholder="wanderer123" required />
      </div>

      <div class="input-field">
        <label for="password">
          <svg class="input-icon" viewBox="0 0 24 24">
            <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/>
          </svg>
          Password
        </label>
        <input name="password" id="password" type="password" placeholder="••••••••" required />
        <div class="password-strength">
          <div class="strength-meter"></div>
          <span>Use 8+ characters with mix of letters & numbers</span>
        </div>
      </div>

      <button type="submit" class="primary-btn">
        <svg class="btn-icon" viewBox="0 0 24 24">
          <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
        </svg>
        Login
      </button>
    </form>
  </div>
</div>

<link rel="stylesheet" href="/css/signup.css">



  