 <% layout("/layouts/boilerplate") %>
<style>
  :root {
    --primary-color: #FF385C;
    --icon-color: #717171;
    --icon-hover: #FF385C;
    --text-color: #222222;
    --light-gray: #f7f7f7;
    --border-radius: 12px;
    --tax-bg: #f8f9fa;
  }

  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1.2rem;
    padding: 0.8rem 0 1rem 0;
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 70px;
    padding: 0.5rem 0;
    transition: all 0.2s ease;
  }

  /* Improved icon colors */
  .filter i {
    font-size: 1.2rem;
    color: var(--icon-color);
    margin-bottom: 0.3rem;
    transition: all 0.2s ease;
  }

  .filter:hover i {
    color: var(--icon-hover);
  }

  .filter p {
    font-size: 0.7rem;
    color: var(--icon-color);
    margin: 0;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .filter:hover p {
    color: var(--text-color);
  }

  .tax-toggle {
    margin-left: auto;
    display: flex;
    align-items: center;
    background: var(--tax-bg);
    padding: 0.6rem 1rem;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
  }

  /* Image container with fixed size and no zoom */
  .image-container {
    height: 280px;
    width: 100%;
    overflow: hidden;
    position: relative;
    border-radius: var(--border-radius) var(--border-radius) 0 0;
  }

  .listing-image {
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: center;
    /* Removed transform scale */
    border-radius: var(--border-radius) var(--border-radius) 0 0;
  }

  /* Card styling */
  .listing-card {
    border: none;
    border-radius: var(--border-radius);
    overflow: hidden;
    margin-bottom: 1.5rem;
    background: white;
    box-shadow: 0 3px 10px rgba(0,0,0,0.08);
    transition: box-shadow 0.3s ease; /* Only shadow animation */
  }

  .listing-card:hover {
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }

  /* New professional icon color palette */
  .fa-fire { color: #FF5A5F; }      /* Reddish */
  .fa-bed { color: #00A699; }       /* Teal */
  .fa-mountain-city { color: #FC642D; } /* Orange */
  .fa-mountain-sun { color: #767676; }  /* Gray */
  .fa-chess-rook { color: #484848; }    /* Dark gray */
  .fa-person-swimming { color: #008489; } /* Blue-green */
  .fa-campground { color: #5E9F69; }    /* Green */
  .fa-cow { color: #C1839F; }           /* Mauve */
  .fa-snowflake { color: #00B4D8; }     /* Light blue */

  /* Hover effects for icons */
  .filter:hover .fa-fire { color: #FF5A5F; }
  .filter:hover .fa-bed { color: #00A699; }
  /* Add similar hover effects for other icons */

  @media (max-width: 768px) {
    .image-container {
      height: 240px;
    }
    
    .filter i {
      font-size: 1.1rem;
    }
  }
</style>

<div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
