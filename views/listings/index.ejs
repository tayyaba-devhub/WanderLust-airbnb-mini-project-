    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
  <% for(let listing of allListings){ %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-Link">
        <div class="card listing-card">
          <div class="image-container">
            <% if (listing.image && (listing.image.url || typeof listing.image === 'string')) { %>
              <img 
                src="<%= typeof listing.image === 'string' ? listing.image : listing.image.url %>" 
                class="listing-image" 
                alt="<%= listing.title %>"
                onerror="this.onerror=null;this.src='/images/default-listing.jpg';"
              > 
            <% } else { %>
              <div class="no-image-placeholder">
                <i class="fas fa-image"></i>
              </div>
            <% } %>
          </div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b>
              <span class="price">₹<%= listing.price.toLocaleString("en-IN") %> night</span>
              <span class="tax-info">+ ₹<%= Math.round(listing.price * 0.18).toLocaleString("en-IN") %> taxes</span>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const taxSwitch = document.getElementById("switchCheckDefault");
    if (taxSwitch) {
      taxSwitch.addEventListener("change", () => {
        document.querySelectorAll('.tax-info').forEach(info => {
          info.style.display = taxSwitch.checked ? "inline" : "none";
        });
      });
      // Initialize tax info visibility
      document.querySelectorAll('.tax-info').forEach(el => {
        el.style.display = taxSwitch.checked ? "inline" : "none";
      });
    }
  });
</script>