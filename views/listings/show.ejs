<% layout("layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
  const LOCATIONIQ_TOKEN = "<%= process.env.LOCATIONIQ_TOKEN %>";
</script>

<% 
// Rating label helper function
function getRatingLabel(rating) {
  const labels = {
    1: 'Poor',
    2: 'Fair',
    3: 'Good',
    4: 'Very Good',
    5: 'Excellent'
  };
  return labels[rating] || '';
}
%>

<div class="container mt-3">
  <!-- Compact Breadcrumb -->
  <nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb small">
      <li class="breadcrumb-item"><a href="/listings">All Listings</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= listing.title %></li>
    </ol>
  </nav>

  <!-- Main Listing - Compact Version -->
  <div class="row g-3">
    <!-- Images Column -->
    <div class="col-lg-7">
      <div class="card border-0 shadow-sm">
        <img src="<%= listing.image.url %>" class="card-img-top rounded-top" style="height: 300px; object-fit: cover;" alt="Listing image">
        <div class="card-body p-3">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h2 class="h5 mb-0"><%= listing.title %></h2>
            <span class="badge bg-primary">₹<%= listing.price.toLocaleString("en-IN") %></span>
          </div>
          
          <div class="d-flex align-items-center mb-2 small">
            <div class="me-2">
              <i class="bi bi-person-circle me-1"></i>
              <span class="text-muted">Owner:</span>
              <span><%= listing.owner.username %></span>
            </div>
            <div>
              <i class="bi bi-geo-alt me-1"></i>
              <span class="text-muted">Location:</span>
              <span><%= listing.location %>, <%= listing.country %></span>
            </div>
          </div>
          
          <div class="mb-3">
            <h5 class="h6 mb-1">Description</h5>
            <p class="card-text small text-muted"><%= listing.description %></p>
          </div>
          
          <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
            <div class="d-flex gap-2">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-pencil-square me-1"></i> Edit
              </a>
              <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                <button class="btn btn-outline-danger btn-sm">
                  <i class="bi bi-trash me-1"></i> Delete
                </button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    
    <!-- Map/Details Column -->
    <div class="col-lg-5">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-3">
          <h5 class="h6 mb-2">Location Map</h5>
          <!-- Map Container -->
          <div id="map-container" style="position: relative; height: 300px; width: 100%; background-color: #f5f5f5; border-radius: 5px;">
            <div id="map" style="height: 100%; width: 100%;"></div>
            <div id="map-debug" style="position: absolute; top: 10px; left: 10px; background: white; padding: 5px; border-radius: 3px; font-size: 0.8rem;">
              Coordinates: <%= listing.geometry?.coordinates ? listing.geometry.coordinates.join(', ') : 'Not available' %>
            </div>
          </div>
          
          <div class="mt-3">
            <h5 class="h6 mb-2">Details</h5>
            <ul class="list-group list-group-flush small">
              <li class="list-group-item d-flex justify-content-between px-0 py-1">
                <span class="text-muted">Posted</span>
                <span><%= new Date(listing.createdAt).toLocaleDateString() %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between px-0 py-1">
                <span class="text-muted">Category</span>
                <span>Real Estate</span>
              </li>
              <li class="list-group-item d-flex justify-content-between px-0 py-1">
                <span class="text-muted">Contact</span>
                <span><%= listing.owner.email %></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Compact Reviews Section -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="h5 mb-0">Reviews</h3>
        <% if (listing.reviews.length > 0) { %>
          <span class="badge bg-success small">
            <%= listing.reviews.length %> review<%= listing.reviews.length !== 1 ? 's' : '' %>
          </span>
        <% } %>
      </div>
      
      <% if (listing.reviews.length > 0) { %>
        <div class="row g-3">
          <% listing.reviews.forEach(review => { %>
            <div class="col-md-6">
              <div class="card border-0 shadow-sm">
                <div class="card-body p-3">
                  <div class="d-flex justify-content-between mb-2">
                    <div>
                      <h5 class="h6 mb-0">@<%= review.author.username %></h5>
                      <small class="text-muted">
                        <%= new Date(review.createdAt).toLocaleDateString() %>
                      </small>
                    </div>
                    <div class="text-warning">
                      <% for (let i = 1; i <= 5; i++) { %>
                        <i class="bi bi-star<%= i <= review.rating ? '-fill' : '' %> small"></i>
                      <% } %>
                      <span class="badge bg-light text-dark ms-1 small"><%= getRatingLabel(review.rating) %></span>
                    </div>
                  </div>
                  <p class="card-text small text-muted mb-2"><%= review.comment %></p>
                  
                  <% if (currUser && currUser._id.equals(review.author._id)) { %>
                    <div class="mt-2 d-flex gap-2">
                      <a href="/listings/<%= listing._id %>/reviews/<%= review._id %>/edit" 
                         class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pencil-square me-1"></i> Edit
                      </a>
                      <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" 
                            method="POST" class="d-inline">
                        <button class="btn btn-outline-danger btn-sm">
                          <i class="bi bi-trash me-1"></i> Delete
                        </button>
                      </form>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="text-center py-3 bg-light rounded small">
          <i class="bi bi-chat-square-text text-muted mb-2"></i>
          <p class="text-muted mb-0">No reviews yet. Be the first to review!</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Add Review Section - Compact -->
  <% if (currUser) { %>
    <div class="row mt-4">
      <div class="col-12">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-3">
            <h4 class="h6 mb-3">Share Your Experience</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST">
              <div class="mb-3">
                <label for="ratingRange" class="form-label small fw-medium">Rating</label>
                <div class="d-flex align-items-center gap-2">
                  <input type="range" class="form-range" min="1" max="5" value="3" 
                         name="review[rating]" id="ratingRange" step="1">
                  <output id="ratingValue" class="fw-bold text-warning small">3</output>
                  <span class="text-warning small" id="ratingLabel">Good</span>
                </div>
                <div class="d-flex justify-content-between mt-1 small text-muted">
                  <span>Poor</span>
                  <span>Fair</span>
                  <span>Good</span>
                  <span>Very Good</span>
                  <span>Excellent</span>
                </div>
              </div>
              <div class="mb-3">
                <label for="comment" class="form-label small fw-medium">Your Review</label>
                <textarea name="review[comment]" id="comment" class="form-control form-control-sm" 
                          rows="2" placeholder="Share your experience..." required></textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-sm">
                <i class="bi bi-send me-1"></i> Submit
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="alert alert-warning mt-3 py-2 small d-flex align-items-center">
      <i class="bi bi-exclamation-triangle-fill me-2"></i>
      <div>
        You must be <a href="/login" class="alert-link">logged in</a> to post a review.
      </div>
    </div>
  <% } %>
</div>

<!-- Map Scripts -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
  // Rating quality labels
  function getRatingLabel(rating) {
    const labels = {
      1: 'Poor',
      2: 'Fair',
      3: 'Good',
      4: 'Very Good',
      5: 'Excellent'
    };
    return labels[rating] || '';
  }

  // Enhanced rating display with labels
  const ratingInput = document.getElementById('ratingRange');
  const ratingOutput = document.getElementById('ratingValue');
  const ratingLabel = document.getElementById('ratingLabel');
  
  ratingOutput.textContent = ratingInput.value;
  ratingLabel.textContent = getRatingLabel(parseInt(ratingInput.value));
  
  ratingInput.addEventListener('input', () => {
    const rating = parseInt(ratingInput.value);
    ratingOutput.textContent = rating;
    ratingLabel.textContent = getRatingLabel(rating);
  });

  // Map Initialization
  window.addEventListener('load', function () {
    const mapElement = document.getElementById('map');
    if (mapElement) {
      const coords = <%- listing.geometry?.coordinates ? JSON.stringify(listing.geometry.coordinates) : '[73.0479, 33.6844]' %>;
      const map = L.map(mapElement, {
        center: [coords[1], coords[0]],
        zoom: 14,
        zoomControl: true,
        attributionControl: false
      });

      const locationIQLayer = L.tileLayer(
        'https://tiles.locationiq.com/v3/streets/{z}/{x}/{y}.png?key=' + LOCATIONIQ_TOKEN,
        {
          maxZoom: 18,
          attribution: '© LocationIQ'
        }
      ).addTo(map);

      const osmLayer = L.tileLayer(
        'https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png',
        {
          maxZoom: 18,
          attribution: '© OpenStreetMap'
        }
      );

      locationIQLayer.on('tileerror', function () {
        console.log('LocationIQ tiles failed, switching to OSM');
        map.removeLayer(locationIQLayer);
        osmLayer.addTo(map);
      });

      const homeIcon = L.icon({
        iconUrl: 'https://cdn0.iconfinder.com/data/icons/small-n-flat/24/678111-map-marker-512.png',
        iconSize: [32, 32],
        iconAnchor: [16, 32]
      });

      L.marker([coords[1], coords[0]], { icon: homeIcon })
        .addTo(map)
        .bindPopup(`
          <div style="min-width: 200px">
            <h5 style="margin: 0 0 5px 0"><%= listing.title || 'Location' %></h5>
            <div><strong>Coordinates:</strong></div>
            <div>${coords[1].toFixed(6)}, ${coords[0].toFixed(6)}</div>
          </div>
        `)
        .openPopup();
    }
  });
</script>

