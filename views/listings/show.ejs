<% layout("/layouts/boilerplate") %>

<div class="row my-4 show-info">
  <div class="col-md-8 offset-md-2">
    <h2 class="mb-4 text-center"><%= listing.title %></h2>

    <div class="card shadow-sm p-3 text-center listing-card">
      <img src="<%= listing.image %>" class="card-img-top show-image" alt="listing image" />

      <div class="card-body">
        <h4 class="card-title mb-3"><%= listing.title %></h4>
        <p class="card-text">
          <div class="card-text">
     <% if (listing.owner && listing.owner.username) { %>
  <p><i>Owned by: <%= listing.owner.username %></i></p>
<% } else { %>
  <p><i>Owner information not available</i></p>
<% } %>

       <p><%= listing.description %></p>
</div>


        <ul class="list-group list-group-flush mb-3">
          <li class="list-group-item"><strong>Price:</strong> â‚¹ <%= listing.price.toLocaleString("en-IN") %></li>
          <li class="list-group-item"><strong>Location:</strong> <%= listing.location %></li>
          <li class="list-group-item"><strong>Country:</strong> <%= listing.country %></li>
        </ul>
        <% if (currUser && currUser._id.toString() === listing.owner._id.toString()) { %>
        <div class="d-flex justify-content-between">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-edit">Edit Listing</a>

          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this listing?');">
            <button class="btn btn-delete">Delete Listing</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <!-- review -->
  <hr>
  
<div class="col-md-8 offset-md-2 mb-3">
  <% if(currUser) {%>
  <h4 class="mb-4">Leave a Review</h4>
  <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
    <div class="mb-4">
      <label for="rating" class="form-label fw-bold">Rating</label>
      <div class="d-flex justify-content-between align-items-center mb-2">
        <small class="text-muted">Poor</small>
        <small class="text-muted">fair</small>
        <small class="text-muted">Average</small>
        <small class="text-muted">Good</small>
        <small class="text-muted">Excellent</small>
      </div>
      <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" style="width: 100%">
      <div class="d-flex justify-content-between mt-1">
        <small>1</small>
        <small>2</small>
        <small>3</small>
        <small>4</small>
        <small>5</small>
      </div>
    </div>
    
    <div class="mb-4">
      <label for="comment" class="form-label fw-bold">Comments</label>
      <textarea 
        name="review[comment]" 
        id="comment" 
        cols="30" 
        rows="5" 
        class="form-control" 
        placeholder="Share your experience... What did you like or dislike? Your feedback helps others."
        required
      ></textarea>
      <div class="invalid-feedback">Please share your thoughts about this listing</div>
    </div>
    <button class="btn btn-primary px-4 py-2 fw-bold">Submit Review</button>
  </form>
  <% } %>
<br>
<p><b>All Reviews</b></p>
<div class="row">
  <% for(review of listing.reviews) { %>
    <div class="card col-5 ms-3 mb-3">
      <div class="card-body">
        <h5 class="card-title">@<%= review.author.username || 'Anonymous' %></h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="card-text">
          <% for(let i = 0; i < review.rating; i++) { %>
            <i class="fas fa-star text-warning"></i>
          <% } %>
          (<%= review.rating %>/5)
        </p>
      </div>
      <form class="mb-3 ms-2" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
        <button class="btn btn-sm btn-dark">Delete</button>
      </form>
    </div>
  <% } %>
</div>